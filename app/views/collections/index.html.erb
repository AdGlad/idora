<h1> List all collections </h1>
<p>
<%= link_to "Create new collection", new_collection_path %>
</p>

<table>
  <tr>
   <th>Collection </th>
   <th>Desc </th>
  </tr>

 <% @collections.each do |collection| %>
 <tr>
   <td><%= collection.collectionid %></td>
   <td><%= collection.description %></td>
   <small>
   <td><%= collection.user.username %></td>
   <td><%= time_ago_in_words(collection.created_at) if collection.created_at%></td> 
   <td><%= time_ago_in_words(collection.updated_at) if collection.updated_at%></td> 
   </small>
   <td><%= link_to "Edit", edit_collection_path(collection) %></td>
   <td><%= link_to "Show", collection_path(collection) %></td>
   <td><%= link_to "Delete", collection_path(collection), method: :delete, data: {confirm: "Are you sure?"}%> </td>
  </tr>
 <% end %>
</table>
